{% extends 'base.html.twig' %}

{% block title %}Modification des stocks
{% endblock %}

{% block body %}
	{% include 'partials/navbar.html.twig' %}
	<h1 class="text-center mt-3 mb-10">Modification de l'etat du stocks</h1>
	<div class="container mt-4 d-flex justify-content-center">

		<div class="mx-3">
			{{ form_start(form) }}
			<div class="form-group">
				<div class="mb-3">
					<label for="" class="me-5">Trondro</label>
					{{ form_widget(form.Trondro, {'attr' : { 'disabled': 'disabled'} })}}

					
					
				</div>

				<div class="mb-3">
					<label for="" class="me-5">Poids</label>
					{{ form_widget(form.Poids)}}
				</div>

				<div class="mb-3">
					<label for="" class="me-5">Prix Unitaire</label>
					{{ form_widget(form.Prix_unitaire, {'attr' : {'disabled' : 'disabled'} })}}
				</div>

				<div class="mb-3">
					<label for="" class="me-5">Prix en Vente</label>
					{{ form_widget(form.Prix_en_vente, {'attr' : {'disabled' : 'disabled'} })}}
				</div>


				<div class="mb-3">
					<label for="" class="me-5">Etat</label>
					{{ form_widget(form.Etat)}}
				</div>


				<div class="mb-3">
					<label class="me-5">Fournisseur</label>
					{{ form_widget(form.Fournisseur, {'attr' : {'disabled' : 'disabled'} })}}
				</div>
			</div>

			<div class="mt-3 d-flex justify-content-center">
				<button type="submit" class="btn btn-primary">Mise a jour</button>

			</div>

			{{ form_end(form) }}

		</div>

	{% endblock %}
