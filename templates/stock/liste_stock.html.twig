{% extends 'base.html.twig' %}

{% block title %}
	ðŸ’µ Liste des stocks
{% endblock %}

{% block body %}
	<h1 class="text-center mt-3 mb-3">
		Stockage des produits
	</h1>


	<div class="container-fluid">
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Date</th>
						<th scope="col">Trondro</th>
						<th scope="col">Poids(KG)</th>
						<th scope="col">Prix Unitaire(AR)</th>
						<th scope="col">Etat</th>
						<th scope="col">Paiement</th>
						<th scope="col">Fournisseur</th>
						<th scope="col">Total(AR)</th>
						<th scope="col">Gain(AR)</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for stockage in stock %}
						<tr>
							<td scope="row">{{ stockage.createdAt | date('d-m-Y')}}</td>
							<td scope="row">{{ stockage.Trondro}}</td>
							<td scope="row">{{ stockage.Poids}}</td>
							<td scope="row">{{ stockage.prixunitaire}}</td>
							<td scope="row">{{ stockage.etat}}</td>
							<td scope="row">{{ stockage.Paiement}}</td>
							<td scope="row">{{ stockage.Fournisseur}}</td>
							<td scope="row">{{ stockage.total}}</td>
							<td scope="row">{{ stockage.gain}}</td>

							<td>
								<a href="{{ path('editer_stock', { 'id': stockage.id})}}" class="btn btn-dark btn-sm">Modifier</a>

							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

	</div>


{% endblock %}
