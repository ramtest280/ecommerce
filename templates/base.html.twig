		<script>
			// Ajoutez un script JavaScript pour g√©rer le focus et le blur du champ
$(document).ready(function () {
$('#exampleInput').on('focus', function () {
$('label[for="exampleInput"]').addClass('active');
});

$('#exampleInput').on('blur', function () {
if ($(this).val() === '') {
$('label[for="exampleInput"]').removeClass('active');
}
});
});
		</script>


	</body>
