{% extends 'base.html.twig' %}

{% block title %}Liste des clients
{% endblock %}

{% block body %}
	{% include 'partials/navbar.html.twig' %}
	<h1 class="text-center mt-3 mb-3">Liste des clients</h1>
	<center>
		<a href="{{ path('app_client_new') }}">Ajouter un client</a>
	</center>

	<div class="container mx-5">
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Anarana</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for client in clients %}
					<tr>
						<td>{{ client.anarana }}</td>
						<td class="justify-content-end">
							<a href="#" class="btn btn-info">Informations</a>

							<a href="{{ path('app_client_edit', {'id': client.id })}}" class="btn btn-success">Modifier</a>

							<a href="{{ path('app_client_delete', {'id': client.id })}}" class="btn btn-danger" onsubmit="Voulez-vous vraiment supprimer le client">Supprimer</a>


						</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
